{
  "name": "mbsoft/banquet-hall-manager",
  "version": "0.1.0",
  "description": "Banquet hall management (events, bookings, invoices, payments, staff, analytics)",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "illuminate/support": "^12.0",
    "illuminate/database": "^12.0",
    "illuminate/notifications": "^12.0",
    "illuminate/validation": "^12.0",
    "illuminate/console": "^12.0",
    "illuminate/routing": "^12.0"
  },
  "require-dev": {
    "pestphp/pest": "^3.0",
    "pestphp/pest-plugin-laravel": "^3.0",
    "orchestra/testbench": "^10.0",
    "mockery/mockery": "^1.6",
    "phpunit/phpunit": "^11.0"
  },
  "autoload": {
    "psr-4": {
      "Mbsoft\\BanquetHallManager\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Mbsoft\\BanquetHallManager\\Tests\\": "tests/",
      "Mbsoft\\BanquetHallManager\\Database\\Factories\\": "database/factories/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Mbsoft\\BanquetHallManager\\BanquetHallManagerServiceProvider"
      ]
    }
  },
  "scripts": {
    "test": "vendor/bin/pest",
    "test-coverage": "vendor/bin/pest --coverage",
    "test-profile": "vendor/bin/pest --profile"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}